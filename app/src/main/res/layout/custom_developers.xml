<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"

    android:paddingTop="8dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:background="@drawable/round_button"
        android:id="@+id/DevImage"
        android:layout_alignParentTop="true"
        android:src="@drawable/developers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/DevName"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Aditya Bansal"
        android:layout_alignTop="@+id/DevImage"
        android:layout_toRightOf="@+id/DevImage"
        android:layout_toEndOf="@+id/DevImage" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="UI/UX  Back-end Developer"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:id="@+id/contri"
        android:layout_alignLeft="@+id/DevName"
        android:layout_alignStart="@+id/DevName"
        android:gravity="center"
       android:layout_marginTop="40dp"
        />

</RelativeLayout>